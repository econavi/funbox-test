*,
*:before, 
*:after
	box-sizing border-box
	
*:focus
	outline none

html
	position relative
	width 100%
	height 100%
	min-height 100%
	font-size 10px

body
	width 100%
	min-height 100%
	font-size 1.6rem
	overflow-y auto
	-webkit-overflow-scrolling touch
	fontFamily($font-default)

img
	max-width 100%
	height auto

h1, h2, h3, h4, h5, h6
	fontFamily($font-second)
	text-align center
	font-weight 100

h1
	letter-spacing 2px

